name: Ejercicio_3
on:
  push:
    branches:
      - main
jobs:
  configuracion:
    runs-on: ubuntu-latest
    steps:
      - name: Check out del repositorio
        uses: actions/checkout@v2    
      - name: mensaje
        run: echo "Job en proceso" 
      - name: tiempo de espera
        run: sleep 3 
  construccion:
    needs: configuracion  
    runs-on: ubuntu-latest
    steps:
      - name: Check out del repositorio
        uses: actions/checkout@v2    
      - name: mensaje
        run: echo "Job en proceso" 
      - name: tiempo de espera
        run: sleep 3 
  prueba01:
    needs: construccion  
    runs-on: ubuntu-latest
    steps:
      - name: Check out del repositorio
        uses: actions/checkout@v2    
      - name: mensaje
        run: echo "Job en proceso" 
      - name: tiempo de espera
        run: sleep 3 
  prueba02:
    needs: construccion  
    runs-on: ubuntu-latest
    steps:
      - name: Check out del repositorio
        uses: actions/checkout@v2    
      - name: mensaje
        run: echo "Job en proceso" 
      - name: tiempo de espera
        run: sleep 3
  despliegue:
    needs: [prueba01, prueba02]
    runs-on: ubuntu-latest
    steps:
      - name: Check out del repositorio
        uses: actions/checkout@v2    
      - name: mensaje
        run: echo "Job en proceso" 
      - name: tiempo de espera
        run: sleep 3 
        
